<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Shock" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/shockOrange</item>
        <item name="colorPrimaryDark">@color/shockGray</item>
        <item name="colorAccent">@color/shockWhite</item>
        <item name="colorControlNormal">@color/shockGray</item>
        <item name="colorControlActivated">@color/shockOrange</item>
    </style>

    <style name="Shocklight" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/shockOrange</item>
        <item name="colorPrimaryDark">@color/shockGray</item>
        <item name="colorAccent">@color/reignBlack</item>
        <item name="colorControlNormal">@color/shockGray</item>
        <item name="colorControlActivated">@color/shockOrange</item>
        <item name="android:windowBackground">@color/shockWhite</item>
    </style>

    <style name="Reign" parent="Theme.AppCompat.NoActionBar" >
